<!-- views/editProduct.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Product</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1>Edit Product</h1>
    <form action="/edit/<%= product._id %>" method="POST">
        <input type="text" name="title" value="<%= product.title %>" required class="form-control mt-4" />
        <input type="number" name="price" value="<%= product.price %>" required   class="form-control mt-4" />
        <textarea name="description"  class="form-control mt-4" ><%= product.description %></textarea>
        <input type="text" name="imageUrl" value="<%= product.imageUrl %>"  class="form-control mt-4" />
        <button type="submit" class="btn btn-info mt-4">Update Product</button>
    </form>
    <a href="/">Back to List</a>
    </div>
</body>
</html>
